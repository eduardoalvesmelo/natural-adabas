/** New Program X3.
/**    Fazer um programa para receber 3 valores inteiros do usuário e mostrar a sua média (que pode não ser inteira).
/** :author eduar
/* TODO Enter your code here
DEFINE DATA LOCAL
1 N1 (N2) 
1 N2 (N2) 
1 N3 (N2)
1 MEDIA (N2.2)
END-DEFINE

INPUT 'Informe o primeiro numero : ' N1
INPUT 'Informe o segundo numero : ' N2
INPUT 'Informe o terceiro numero : ' N3

MEDIA := (N1 + N2 + N3) / 3
 

WRITE 'Primeiro numero lido : ' N1
WRITE 'Segundo numero lido : ' N2
WRITE 'Terceiro numero lido : ' N3 
WRITE 'A média de ' N1 ',' N2 ',' N3 'é: ' MEDIA 

END
