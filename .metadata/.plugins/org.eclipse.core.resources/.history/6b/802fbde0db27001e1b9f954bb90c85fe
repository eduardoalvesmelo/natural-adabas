* <Natural Source Header
/** Fazer um programa para ler um número do usuário e determinar se este número é par ou não par. 
/**
/** :author eduar
/* TODO Enter your code here
DEFINE DATA LOCAL
1 N1 (N2) 
1 RESTO (N2.2)
END-DEFINE

INPUT 'Informe um numero : ' N1
RESTO = N1 % 2

IF N1 = 0
    DISPLAY 'Erro: Divisão por zero não é permitida'
ELSE IF 

MEDIA := (N1 + N2 + N3) / 3
 

WRITE 'Primeiro numero lido : ' N1
WRITE 'Segundo numero lido : ' N2
WRITE 'Terceiro numero lido : ' N3 
WRITE 'A média de ' N1 ',' N2 ',' N3 'é: ' MEDIA 
END
